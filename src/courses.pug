extends templates/layout
include templates/_mixin-menu


block content
	-var current = "courses.html"
	include templates/incl-header-through

	main
		.courses
			h2 Курсы
			.courses__list
				each item, i in course
					.courses__item
						.courses__content(data-scroll)
							.courses__type= item.type
							.courses__descr
								h4
									a(href="course-item.html")= item.name
								p= item.descr
							.courses__price
								p.date= item.date
								p.price= item.price
							a(href="course-item.html").courses__link

